{
  "name": "timezone-date.ts",
  "version": "0.1.4",
  "description": "Enhancement of Date class with better timezone support",
  "keywords": [
    "timezone",
    "date",
    "time",
    "tzdate",
    "convert",
    "offset"
  ],
  "author": "Beeno Tung <aabbcc1241@yahoo.com.hk> (https://beeno-tung.surge.sh)",
  "license": "BSD-2-Clause",
  "main": "dist/timezone-date.min.js",
  "types": "dist/timezone-date.d.ts",
  "scripts": {
    "test": "npm run rawtest",
    "clean": "rimraf dist",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "postformat": "tslint -p . --fix",
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "minify dist/timezone-date.js > dist/timezone-date.min.js",
    "pretest": "npm run format && npm run build",
    "rawtest": "ts-node test/index.ts",
    "prepublishOnly": "npm run rawtest && npm run build"
  },
  "husky": {
    "hook": {
      "pre-commit": "npm run format"
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/node": "*",
    "husky": "^4.2.5",
    "minify": "^6.0.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-node": "^8.9.0",
    "tslint": "^6.1.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-etc": "^1.10.1",
    "typescript": "^3.8.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beenotung/timezone-date.git"
